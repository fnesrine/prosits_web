{# templates/list.html.twig #}
{% block body %}
    {% if not authors is empty %}
        <h1>Liste des auteurs</h1>
        <p>Nombre d'auteurs : {{ authors|length }}</p>
        <p>Nombre total de livres : {{ authors|sum(attribute='nb_books') }}</p>
        <ul>
            {% for author in authors %}
                <li>
                    <a href="{{ path('author_details', {'id': author.id}) }}">details</a>
                    {{ author.username|upper }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun auteur trouv√©.</p>
    {% endif %}
{% endblock %}



